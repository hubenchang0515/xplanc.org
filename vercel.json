{
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/primers/",
      "destination": "https://primers.xplanc.org/"
    },

    {
      "source": "/primers/:path*",
      "destination": "https://primers.xplanc.org/:path*"
    },

    {
      "source": "/shift/",
      "destination": "https://shift.xplanc.org/"
    },

    {
      "source": "/shift/:path*",
      "destination": "https://shift.xplanc.org/:path*"
    },

    {
      "source": "/idea/",
      "destination": "https://idea.xplanc.org/"
    },

    {
      "source": "/idea/:path*",
      "destination": "https://idea.xplanc.org/:path*"
    }
  ],

  "redirects": [
    {
      "source": "/primers",
      "destination": "/primers/",
      "permanent": true
    },

    {
      "source": "/primers/",
      "destination": "/primers/document/zh",
      "permanent": false
    },

    {
      "source": "/shift",
      "destination": "/shift/",
      "permanent": true
    },

    {
      "source": "/shift/wasm/:file.wasm",
      "destination": "https://cdn.xplanc.org/shift/:file.wasm",
      "permanent": true
    },
    
    {
      "source": "/shift/wasm/:file.data",
      "destination": "https://cdn.xplanc.org/shift/:file.data",
      "permanent": true
    },

    {
      "source": "/shift/assets/:name(.*)-:hash.ttf",
      "destination": "https://cdn.xplanc.org/fonts/:name.ttf",
      "permanent": true
    },

    {
      "source": "/idea",
      "destination": "/idea/",
      "permanent": true
    },

    {
      "source": "/uptime",
      "destination": "https://stats.uptimerobot.com/wTSqLfXezb",
      "permanent": true
    },

    {
      "source": "/QtTheme/",
      "destination": "https://hubenchang0515.github.io/QtTheme/",
      "permanent": true
    },

    {
      "source": "/QtTheme/:path*",
      "destination": "https://hubenchang0515.github.io/QtTheme/:path*",
      "permanent": true
    },

    {
      "source": "/Phosphophyllite",
      "destination": "/idea/",
      "permanent": true
    },

    {
      "source": "/Phosphophyllite/",
      "destination": "/idea/",
      "permanent": true
    },

    {
      "source": "/Phosphophyllite/articles/:path*",
      "destination": "/idea/:path*.md",
      "permanent": true
    },

    {
      "source": "/Phosphophyllite/categories/:category*-:page*",
      "destination": "/idea/:category*/page/:page*",
      "permanent": true
    },

    {
      "source": "/primers/document/zh/02.Python/EX.%E5%86%85%E5%BB%BA%E5%87%BD%E6%95%B0.hide/:path*",
      "destination": "/primers/document/zh/02.Python/EX.%E5%86%85%E5%BB%BA%E5%87%BD%E6%95%B0/:path*",
      "permanent": true
    },

    {
      "source": "/primers/document/en/02.Python/EX.Built-in%20functions.hide/:path*",
      "destination": "/primers/document/en/02.Python/EX.Built-in%20functions/:path*",
      "permanent": true
    },

    {
      "source": "/primers/document/zh/03.HTML/EX.HTML%20%E5%85%83%E7%B4%A0%E5%B8%AE%E5%8A%A9%E6%89%8B%E5%86%8C.hide/:path*",
      "destination": "/primers/document/zh/03.HTML/EX.HTML%20%E5%85%83%E7%B4%A0/:path*",
      "permanent": true
    },

    {
      "source": "/primers/document/en/03.HTML/EX.HTML%20Element%20Manual.hide/:path*",
      "destination": "/primers/document/en/03.HTML/EX.HTML%20Elements/:path*",
      "permanent": true
    }
  ]
}
